{% extends 'emails/base.html.twig' %}

{% block body %}
	<tr>
		<td class="first row">
			{{ 'hello.admin'|trans({'%admin%': app_author}, 'emails') }}
		</td>
	</tr>
	<tr>
		<td class="row">
			{{ 'post_deleted.text'|trans({'%post_author%': post_author}, 'emails') }}
		</td>
	</tr>
	<tr>
		<td class="row">
			{{ 'post.title'|trans({'%post_title%': post_title}, 'emails')|raw }}
		</td>
	</tr>
	<tr>
		<td class="row">
			{{ 'post.deleted_at'|trans({'%post_deleted_at%': post_deleted_at}, 'emails')|raw }}
		</td>
	</tr>
{% endblock %}
