{% block _Post_custom_content_widget %}
	{% set editor_type = form.vars.ea_crud_form.ea_field.customOptions.get('editorType')|default(null) %}
	{% set page_name = form.vars.ea_crud_form.ea_field.customOptions.get('pageName')|default(null) %}
	{% set min_post_length_limit = form.vars.ea_crud_form.ea_field.customOptions.get('minLengthLimit')|default(null) %}
	{% set post_uuid = form.vars.ea_crud_form.ea_entity.instance.uuid|default(null) %}

	<textarea data-controller="ckeditor5" {% if full_name is defined and full_name is not null %} name="{{ full_name }}" {% endif %} {% if editor_type is not null %} data-editor-type="{{ editor_type }}" {% endif %} {% if page_name is not null %} data-page-name="{{ page_name }}" {% endif %} {% if min_post_length_limit is not null %} data-min-post-length-limit="{{ min_post_length_limit }}" {% endif %} {% if post_uuid is not null %} data-uuid="{{ post_uuid }}" {% endif %} required="required">
		{% if value is defined and value is not null %}
			{{ value }}
		{% endif %}
	</textarea>

	{% if editor_type is same as('feature-rich') %}
		{% include "components/editor-word-count.html.twig" %}
	{% endif %}
{% endblock %}
